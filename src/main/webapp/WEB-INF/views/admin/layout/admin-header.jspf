
<%@ page contentType="text/html;charset=UTF-8" pageEncoding="UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>

<%
    com.vstep.model.NguoiDung headerUser = (com.vstep.model.NguoiDung) session.getAttribute("userLogin");
    String userInitials = "";
    String userDisplayName = "Admin";
    String userRole = "Quản trị viên";
    
    if (headerUser != null) {
        String hoTen = headerUser.getHoTen();
        if (hoTen != null && !hoTen.trim().isEmpty()) {
            userDisplayName = hoTen.trim();
            // Lấy chữ cái đầu của từng từ
            String[] words = hoTen.trim().split("\\s+");
            if (words.length > 0) {
                userInitials = words[words.length - 1].substring(0, 1).toUpperCase();
                if (words.length > 1) {
                    userInitials = words[0].substring(0, 1).toUpperCase() + userInitials;
                }
            }
        } else {
            String email = headerUser.getEmail();
            if (email != null && !email.trim().isEmpty()) {
                userDisplayName = email;
                userInitials = email.substring(0, 1).toUpperCase();
            }
        }
        
        String vaiTro = headerUser.getVaiTro();
        if (vaiTro != null && !vaiTro.trim().isEmpty()) {
            if ("admin".equalsIgnoreCase(vaiTro)) {
                userRole = "Quản trị viên";
            } else {
                userRole = vaiTro;
            }
        }
    }
    
    // Màu sắc cho avatar (dựa trên hash của tên)
    int colorIndex = 0;
    if (headerUser != null && headerUser.getHoTen() != null) {
        colorIndex = Math.abs(headerUser.getHoTen().hashCode() % 6);
    }
    String[] avatarColors = {
        "bg-blue-500", "bg-emerald-500", "bg-purple-500", 
        "bg-orange-500", "bg-pink-500", "bg-indigo-500"
    };
    String avatarColor = avatarColors[colorIndex];
%>

<header class="admin-header fixed top-0 inset-x-0 z-40 glass-panel border-b border-blue-100/60 shadow-sm">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-10 py-2 flex items-center justify-between">
        <div class="flex items-center gap-3">
            <button type="button"
                    class="lg:hidden inline-flex h-11 w-11 items-center justify-center rounded-full border border-primary/10 text-primary focus:outline-none focus:ring-2 focus:ring-primary/30 transition hover:bg-primary/5"
                    data-admin-toggle="sidebar"
                    aria-label="Mở điều hướng">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 6h16M4 12h12M4 18h10"/>
                </svg>
            </button>
            <button type="button"
                    class="hidden lg:inline-flex h-11 w-11 items-center justify-center rounded-full border border-blue-100 bg-white/90 text-primary hover:text-primary/90 hover:bg-primary/5 focus:outline-none focus:ring-2 focus:ring-primary/30 tooltip-right transition"
                    data-admin-toggle="sidebar-desktop"
                    data-tooltip="Thu gọn menu"
                    aria-label="Thu gọn thanh điều hướng"
                    aria-expanded="true">
                <span data-icon="expanded" class="flex">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                        <path d="M15 5 8 12l7 7"/>
                    </svg>
                </span>
                <span data-icon="collapsed" class="hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                        <path d="m9 5 7 7-7 7"/>
                    </svg>
                </span>
            </button>
            <div>
                <p class="text-sm uppercase font-semibold text-primary/70 tracking-wider">VSTEP SYSTEM</p>
                <h1 class="text-2xl font-bold text-primary">Quản trị hệ thống</h1>
            </div>
        </div>

        <div class="hidden lg:flex items-center gap-4">
            <div class="relative">
                <input type="search" placeholder="Tìm kiếm nhanh..."
                       class="h-11 w-64 rounded-full border border-blue-100/70 bg-white/90 pl-11 pr-5 text-sm text-slate-700 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary/30 transition">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="absolute left-4 top-1/2 -translate-y-1/2 h-4 w-4 text-slate-400 pointer-events-none"
                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                    <circle cx="11" cy="11" r="7"/>
                    <path d="M20 20l-3-3"/>
                </svg>
            </div>
            
            <button class="relative h-11 w-11 flex items-center justify-center rounded-full border border-blue-100 bg-white/90 text-primary hover:text-primary/80 hover:bg-primary/5 focus:outline-none focus:ring-2 focus:ring-primary/30 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                    <path d="M14.25 17.25a2.25 2.25 0 0 1-4.5 0"/>
                    <path d="M4.5 8.25c0-3.866 3.134-7 7-7h1c3.866 0 7 3.134 7 7v4.058c0 .543.147 1.076.425 1.54L20.5 15a1.5 1.5 0 0 1-1.268 2.25H4.768A1.5 1.5 0 0 1 3.5 15l.575-1.152a3 3 0 0 0 .425-1.54V8.25Z"/>
                </svg>
                <span class="absolute -top-1 -right-1 h-5 w-5 rounded-full bg-accent text-[10px] font-semibold text-white flex items-center justify-center shadow-sm">
                    3
                </span>
            </button>
            
            <!-- User Menu Dropdown -->
            <div class="relative" id="user-menu-container">
                <button type="button" 
                        id="user-menu-button"
                        class="flex items-center gap-3 rounded-full border border-blue-100 bg-white/90 px-3 py-2 hover:bg-primary/5 focus:outline-none focus:ring-2 focus:ring-primary/30 transition group"
                        aria-expanded="false"
                        aria-haspopup="true">
                    <div class="text-right hidden sm:block">
                        <p class="text-sm font-semibold text-slate-800 leading-tight"><%= userDisplayName %></p>
                        <p class="text-xs text-slate-500 leading-tight"><%= userRole %></p>
                    </div>
                    <div class="h-10 w-10 rounded-full <%= avatarColor %> text-white flex items-center justify-center font-semibold text-sm shadow-sm border-2 border-white">
                        <%= userInitials.isEmpty() ? "A" : userInitials %>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400 group-hover:text-slate-600 transition" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path d="M19 9l-7 7-7-7"/>
                    </svg>
                </button>
                
                <!-- Dropdown Menu -->
