<%@ page contentType="text/html;charset=UTF-8" pageEncoding="UTF-8" %>
<aside id="adminSidebar"
       class="admin-sidebar fixed left-0 z-30 w-[16rem] transform lg:transform-none lg:translate-x-0 transition-transform duration-200 ease-out bg-white/95 border-r border-blue-100/80 shadow-lg lg:shadow-none lg:border-transparent glass-panel"
       aria-label="Điều hướng quản trị"
       hidden>
    <div class="admin-sidebar-content px-5 py-6 space-y-8">
        <div>
            <p class="admin-sidebar-heading text-xs uppercase text-primary/60 font-semibold">Tổng quan</p>
            <nav class="mt-3 space-y-2">
                <a href="<%= request.getContextPath() %>/admin/dashboard"
                   class="admin-nav-item flex items-center gap-3 rounded-xl px-4 py-2 text-sm font-semibold text-slate-600 hover:bg-primary.pale hover:text-primary transition"
                   data-admin-nav="dashboard"
                   data-tooltip="Bảng điều khiển">
                    <span class="admin-nav-icon inline-flex h-9 w-9 items-center justify-center rounded-lg bg-primary.pale text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                             viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                            <path d="M3 13.5 12 4.5l9 9"/>
